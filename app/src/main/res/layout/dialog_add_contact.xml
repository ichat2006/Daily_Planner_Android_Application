<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Name -->
        <EditText
            android:id="@+id/input_contact_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:inputType="textCapWords" />

        <!-- Notes -->
        <EditText
            android:id="@+id/input_contact_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Notes"
            android:inputType="text" />

        <!-- Phone -->
        <EditText
            android:id="@+id/input_contact_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Phone"
            android:inputType="phone" />

        <!-- Email -->
        <EditText
            android:id="@+id/input_contact_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Email"
            android:inputType="textEmailAddress" />

        <!-- Category label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/label_category" />

        <!-- Category choices -->
        <RadioGroup
            android:id="@+id/contact_category_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/cat_family"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Family" />

            <RadioButton
                android:id="@+id/cat_friends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Friends" />

            <RadioButton
                android:id="@+id/cat_coworkers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coworkers" />

            <RadioButton
                android:id="@+id/cat_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other" />

        </RadioGroup>
    </LinearLayout>
</ScrollView>

