<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myapplication.ui.home.HomeFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/home_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:layout_margin="24dp"
        android:backgroundTint="#80FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/currentTaskImage"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:src="@drawable/homepage"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true" />

            <TextView
                android:id="@+id/current_task_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Task"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/current_task_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No urgent tasks right now!"
                android:textSize="16sp"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>